<Window x:Class="NetToolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="网络工具包 - NetToolkit" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Window.Resources>
        <Style x:Key="ModuleCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <materialDesign:ColorZone Grid.Row="0" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                  Mode="PrimaryMid" VerticalAlignment="Top">
            <DockPanel>
                <materialDesign:PackIcon DockPanel.Dock="Left" Kind="NetworkOutline" 
                                       Height="24" Width="24" VerticalAlignment="Center"/>
                <TextBlock DockPanel.Dock="Left" Margin="8,0,0,0" VerticalAlignment="Center"
                          Text="网络工具包" FontSize="20" FontWeight="Medium"/>
                <Button DockPanel.Dock="Right" Style="{StaticResource MaterialDesignIconForegroundButton}"
                        ToolTip="关于" Click="AboutButton_Click">
                    <materialDesign:PackIcon Kind="Information" Height="20" Width="20"/>
                </Button>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- 主内容区域 -->
        <TabControl Grid.Row="1" Style="{StaticResource MaterialDesignTabControl}" Margin="8">
            
            <!-- 静态IP设置选项卡 -->
            <TabItem Header="静态IP设置">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="IpNetworkOutline" Height="18" Width="18" 
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 网络接口选择 -->
                    <materialDesign:Card Grid.Column="0" Style="{StaticResource ModuleCardStyle}">
                        <StackPanel>
                            <TextBlock Text="网络接口选择" FontSize="16" FontWeight="Medium" Margin="0,0,0,16"/>
                            
                            <ComboBox x:Name="NetworkInterfaceComboBox" 
                                    materialDesign:HintAssist.Hint="选择网络接口"
                                    DisplayMemberPath="Name"
                                    SelectionChanged="NetworkInterfaceComboBox_SelectionChanged"
                                    Margin="0,0,0,16"/>
                            
                            <Button Content="刷新接口列表" Click="RefreshInterfaces_Click"
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  HorizontalAlignment="Left"/>
                            
                            <TextBlock x:Name="CurrentConfigText" TextWrapping="Wrap" Margin="0,16,0,0"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- IP配置设置 -->
                    <materialDesign:Card Grid.Column="1" Style="{StaticResource ModuleCardStyle}">
                        <StackPanel>
                            <TextBlock Text="IP配置设置" FontSize="16" FontWeight="Medium" Margin="0,0,0,16"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <RadioButton x:Name="DhcpRadioButton" Content="自动获取IP地址(DHCP)" 
                                           GroupName="IpConfigGroup"
                                           Checked="DhcpRadioButton_Checked" IsChecked="True"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <RadioButton x:Name="StaticRadioButton" Content="使用下面的IP地址" 
                                           GroupName="IpConfigGroup"
                                           Checked="StaticRadioButton_Checked"/>
                            </StackPanel>
                            
                            <Grid x:Name="StaticConfigGrid" IsEnabled="False">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBox Grid.Row="0" x:Name="IpAddressTextBox" 
                                       materialDesign:HintAssist.Hint="IP地址" Margin="0,0,0,8"/>
                                
                                <TextBox Grid.Row="1" x:Name="SubnetMaskTextBox" 
                                       materialDesign:HintAssist.Hint="子网掩码" Margin="0,0,0,8"/>
                                
                                <TextBox Grid.Row="2" x:Name="GatewayTextBox" 
                                       materialDesign:HintAssist.Hint="默认网关" Margin="0,0,0,8"/>
                                
                                <TextBox Grid.Row="3" x:Name="DnsTextBox" 
                                       materialDesign:HintAssist.Hint="DNS服务器" Margin="0,0,0,16"/>
                            </Grid>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="ApplyConfigButton" Content="应用配置" 
                                      Click="ApplyConfigButton_Click"
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      Margin="0,0,8,0"/>
                                <Button Content="重置" Click="ResetConfigButton_Click"
                                      Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <!-- 批量ping选项卡 -->
            <TabItem Header="批量Ping">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Network" Height="18" Width="18" 
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 批量ping配置 -->
                    <materialDesign:Card Grid.Row="0" Style="{StaticResource ModuleCardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" x:Name="IpRangeTextBox" 
                                   materialDesign:HintAssist.Hint="IP地址范围 (例如: 192.168.1.1-192.168.1.100 或 192.168.1.1,192.168.1.2,192.168.1.3)"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                            
                            <StackPanel Grid.Column="1" Margin="8,0">
                                <TextBlock Text="超时时间(ms)" Margin="0,0,0,4"/>
                                <TextBox x:Name="TimeoutTextBox" Text="3000"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button x:Name="StartPingButton" Content="开始Ping" 
                                      Click="StartPingButton_Click"
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      Margin="0,0,8,0"/>
                                <Button x:Name="StopPingButton" Content="停止" 
                                      Click="StopPingButton_Click"
                                      Style="{StaticResource MaterialDesignOutlinedButton}"
                                      IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Ping结果显示 -->
                    <materialDesign:Card Grid.Row="1" Style="{StaticResource ModuleCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <DockPanel Grid.Row="0" Margin="0,0,0,8">
                                <TextBlock DockPanel.Dock="Left" Text="Ping结果" FontSize="16" FontWeight="Medium"/>
                                <Button DockPanel.Dock="Right" Content="清空结果" 
                                      Click="ClearResultsButton_Click"
                                      Style="{StaticResource MaterialDesignFlatButton}"/>
                                <ProgressBar x:Name="PingProgressBar" DockPanel.Dock="Right" 
                                           Width="200" Margin="0,0,8,0" Visibility="Collapsed"/>
                            </DockPanel>
                            
                            <DataGrid Grid.Row="1" x:Name="PingResultDataGrid" 
                                    AutoGenerateColumns="False" CanUserAddRows="False"
                                    materialDesign:DataGridAssist.CellPadding="8,4"
                                    materialDesign:DataGridAssist.ColumnHeaderPadding="8,4">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="IP地址" Binding="{Binding IpAddress}" Width="120"/>
                                    <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="成功">
                                                        <Setter Property="Foreground" Value="Green"/>
                                                    </Trigger>
                                                    <Trigger Property="Text" Value="失败">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </Trigger>
                                                    <Trigger Property="Text" Value="超时">
                                                        <Setter Property="Foreground" Value="Orange"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="响应时间(ms)" Binding="{Binding ResponseTime}" Width="100"/>
                                    <DataGridTextColumn Header="测试时间" Binding="{Binding TestTime}" Width="140"/>
                                    <DataGridTextColumn Header="备注" Binding="{Binding Notes}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </materialDesign:Card>

                    <!-- 统计信息 -->
                    <materialDesign:Card Grid.Row="2" Style="{StaticResource ModuleCardStyle}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                                <materialDesign:PackIcon Kind="CheckCircle" Foreground="Green" 
                                                       Height="16" Width="16" VerticalAlignment="Center"/>
                                <TextBlock x:Name="SuccessCountText" Text="成功: 0" Margin="4,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                                <materialDesign:PackIcon Kind="CloseCircle" Foreground="Red" 
                                                       Height="16" Width="16" VerticalAlignment="Center"/>
                                <TextBlock x:Name="FailCountText" Text="失败: 0" Margin="4,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Clock" Foreground="Orange" 
                                                       Height="16" Width="16" VerticalAlignment="Center"/>
                                <TextBlock x:Name="TimeoutCountText" Text="超时: 0" Margin="4,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 状态栏 -->
        <materialDesign:ColorZone Grid.Row="2" Padding="8" Mode="PrimaryLight" 
                                  VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="StatusText" Text="就绪" VerticalAlignment="Center"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" 
                          Margin="8,0"/>
                <TextBlock Text="NetToolkit v1.0" VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>
<Window x:Class="NetToolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="网络工具包 - NetToolkit" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Window.Resources>
        <!-- 使用全局定义的样式 -->
        <Style x:Key="ModuleCardStyle" TargetType="materialDesign:Card" BasedOn="{StaticResource NetworkToolkitCard}"/>
        
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        </Style>
        
        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 现代化标题栏 -->
        <materialDesign:ColorZone Grid.Row="0" Padding="20,16" materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                  Mode="PrimaryMid" VerticalAlignment="Top"
                                  materialDesign:ElevationAssist.Elevation="Dp6">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="RouterWireless" 
                                           Height="28" Width="28" VerticalAlignment="Center"
                                           Foreground="{DynamicResource MaterialDesignPaper}"/>
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="网络工具包" FontSize="22" FontWeight="Bold"
                                 Foreground="{DynamicResource MaterialDesignPaper}"/>
                        <TextBlock Text="NetToolkit" FontSize="12" FontWeight="Light" Opacity="0.8"
                                 Foreground="{DynamicResource MaterialDesignPaper}"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            ToolTip="设置" Margin="4,0">
                        <materialDesign:PackIcon Kind="Settings" Height="20" Width="20"/>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                            ToolTip="关于" Click="AboutButton_Click" Margin="4,0">
                        <materialDesign:PackIcon Kind="Information" Height="20" Width="20"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- 主内容区域 -->
        <TabControl Grid.Row="1" Style="{StaticResource MaterialDesignTabControl}" 
                    Margin="16,8,16,8" 
                    materialDesign:ColorZoneAssist.Mode="PrimaryLight">
            
            <!-- 静态IP设置选项卡 -->
            <TabItem Header="静态IP设置">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="IpNetworkOutline" Height="18" Width="18" 
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 网络接口选择 -->
                    <materialDesign:Card Grid.Column="0" Style="{StaticResource AnimatedCard}">
                        <StackPanel>
                            <TextBlock Text="网络接口选择" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <ComboBox x:Name="NetworkInterfaceComboBox" 
                                    materialDesign:HintAssist.Hint="选择网络接口"
                                    materialDesign:TextFieldAssist.HasClearButton="True"
                                    DisplayMemberPath="Name"
                                    SelectionChanged="NetworkInterfaceComboBox_SelectionChanged"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                    Margin="0,0,0,16"/>
                            
                            <Button Content="刷新接口列表" Click="RefreshInterfaces_Click"
                                  Style="{StaticResource NetworkToolkitOutlineButton}"
                                  HorizontalAlignment="Left">
                                <Button.CommandParameter>
                                    <materialDesign:PackIcon Kind="Refresh" Height="16" Width="16"/>
                                </Button.CommandParameter>
                            </Button>
                            
                            <TextBlock x:Name="CurrentConfigText" TextWrapping="Wrap" Margin="0,16,0,0"
                                     Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- IP配置设置 -->
                    <materialDesign:Card Grid.Column="1" Style="{StaticResource AnimatedCard}">
                        <StackPanel>
                            <TextBlock Text="IP配置设置" Style="{StaticResource HeaderTextStyle}"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <RadioButton x:Name="DhcpRadioButton" Content="自动获取IP地址(DHCP)" 
                                           GroupName="IpConfigGroup"
                                           Checked="DhcpRadioButton_Checked" IsChecked="True"
                                           Style="{StaticResource MaterialDesignRadioButton}"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <RadioButton x:Name="StaticRadioButton" Content="使用下面的IP地址" 
                                           GroupName="IpConfigGroup"
                                           Checked="StaticRadioButton_Checked"
                                           Style="{StaticResource MaterialDesignRadioButton}"/>
                            </StackPanel>
                            
                            <Grid x:Name="StaticConfigGrid" IsEnabled="False">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBox Grid.Row="0" x:Name="IpAddressTextBox" 
                                       materialDesign:HintAssist.Hint="IP地址 (例如: 192.168.1.100)"
                                       materialDesign:TextFieldAssist.HasClearButton="True"
                                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                       Margin="0,0,0,12"/>
                                
                                <TextBox Grid.Row="1" x:Name="SubnetMaskTextBox" 
                                       materialDesign:HintAssist.Hint="子网掩码 (例如: 255.255.255.0)"
                                       materialDesign:TextFieldAssist.HasClearButton="True"
                                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                       Margin="0,0,0,12"/>
                                
                                <TextBox Grid.Row="2" x:Name="GatewayTextBox" 
                                       materialDesign:HintAssist.Hint="默认网关 (例如: 192.168.1.1)"
                                       materialDesign:TextFieldAssist.HasClearButton="True"
                                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                       Margin="0,0,0,12"/>
                                
                                <TextBox Grid.Row="3" x:Name="DnsTextBox" 
                                       materialDesign:HintAssist.Hint="DNS服务器 (例如: 8.8.8.8,8.8.4.4)"
                                       materialDesign:TextFieldAssist.HasClearButton="True"
                                       Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                       Margin="0,0,0,20"/>
                            </Grid>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="ApplyConfigButton" Content="应用配置" 
                                      Click="ApplyConfigButton_Click"
                                      Style="{StaticResource NetworkToolkitButton}"
                                      Margin="0,0,8,0">
                                    <Button.CommandParameter>
                                        <materialDesign:PackIcon Kind="Check" Height="16" Width="16"/>
                                    </Button.CommandParameter>
                                </Button>
                                <Button Content="重置" Click="ResetConfigButton_Click"
                                      Style="{StaticResource NetworkToolkitOutlineButton}">
                                    <Button.CommandParameter>
                                        <materialDesign:PackIcon Kind="Refresh" Height="16" Width="16"/>
                                    </Button.CommandParameter>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>

            <!-- 批量ping选项卡 -->
            <TabItem Header="批量Ping">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Network" Height="18" Width="18" 
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 批量ping配置 -->
                    <materialDesign:Card Grid.Row="0" Style="{StaticResource AnimatedCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" x:Name="IpRangeTextBox" 
                                   materialDesign:HintAssist.Hint="IP地址范围 (例如: 192.168.1.1-192.168.1.100 或 192.168.1.1,192.168.1.2)"
                                   materialDesign:TextFieldAssist.HasClearButton="True"
                                   materialDesign:HintAssist.IsFloating="True"
                                   Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                            
                            <StackPanel Grid.Column="1" Margin="8,0">
                                <TextBlock Text="超时时间(ms)" Margin="0,0,0,8" 
                                         Style="{StaticResource SubHeaderTextStyle}"/>
                                <TextBox x:Name="TimeoutTextBox" Text="3000"
                                       materialDesign:HintAssist.Hint="毫秒"
                                       Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button x:Name="StartPingButton" Content="开始Ping" 
                                      Click="StartPingButton_Click"
                                      Style="{StaticResource NetworkToolkitButton}"
                                      Margin="0,0,8,0">
                                    <Button.CommandParameter>
                                        <materialDesign:PackIcon Kind="Play" Height="16" Width="16"/>
                                    </Button.CommandParameter>
                                </Button>
                                <Button x:Name="StopPingButton" Content="停止" 
                                      Click="StopPingButton_Click"
                                      Style="{StaticResource NetworkToolkitOutlineButton}"
                                      IsEnabled="False">
                                    <Button.CommandParameter>
                                        <materialDesign:PackIcon Kind="Stop" Height="16" Width="16"/>
                                    </Button.CommandParameter>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>

                    <!-- Ping结果显示 -->
                    <materialDesign:Card Grid.Row="1" Style="{StaticResource AnimatedCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <DockPanel Grid.Row="0" Margin="0,0,0,12">
                                <TextBlock DockPanel.Dock="Left" Text="Ping结果" Style="{StaticResource HeaderTextStyle}"/>
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                    <ProgressBar x:Name="PingProgressBar" 
                                               Width="160" Height="4" Margin="0,0,12,0" Visibility="Collapsed"
                                               Style="{StaticResource MaterialDesignLinearProgressBar}"
                                               VerticalAlignment="Center"/>
                                    <Button Content="导出结果" 
                                          Style="{StaticResource MaterialDesignFlatButton}"
                                          Margin="0,0,8,0">
                                        <Button.CommandParameter>
                                            <materialDesign:PackIcon Kind="Export" Height="16" Width="16"/>
                                        </Button.CommandParameter>
                                    </Button>
                                    <Button Content="清空结果" 
                                          Click="ClearResultsButton_Click"
                                          Style="{StaticResource MaterialDesignFlatButton}">
                                        <Button.CommandParameter>
                                            <materialDesign:PackIcon Kind="Delete" Height="16" Width="16"/>
                                        </Button.CommandParameter>
                                    </Button>
                                </StackPanel>
                            </DockPanel>
                            
                            <DataGrid Grid.Row="1" x:Name="PingResultDataGrid" 
                                    AutoGenerateColumns="False" CanUserAddRows="False"
                                    materialDesign:DataGridAssist.CellPadding="8,4"
                                    materialDesign:DataGridAssist.ColumnHeaderPadding="8,4">
                                <DataGrid.GroupStyle>
                                    <GroupStyle>
                                        <GroupStyle.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="8,4">
                                                    <materialDesign:PackIcon Kind="Circle" Height="12" Width="12" 
                                                                           VerticalAlignment="Center" Margin="0,0,8,0">
                                                        <materialDesign:PackIcon.Style>
                                                            <Style TargetType="materialDesign:PackIcon">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Name}" Value="成功">
                                                                        <Setter Property="Foreground" Value="Green"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Name}" Value="失败">
                                                                        <Setter Property="Foreground" Value="Red"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Name}" Value="超时">
                                                                        <Setter Property="Foreground" Value="Orange"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Name}" Value="错误">
                                                                        <Setter Property="Foreground" Value="DarkRed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Name}" Value="已取消">
                                                                        <Setter Property="Foreground" Value="Gray"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </materialDesign:PackIcon.Style>
                                                    </materialDesign:PackIcon>
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding ItemCount, StringFormat=' ({0}个)'}" 
                                                             Foreground="{DynamicResource MaterialDesignBodyLight}" 
                                                             VerticalAlignment="Center" Margin="4,0,0,0"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GroupStyle.HeaderTemplate>
                                        <GroupStyle.ContainerStyle>
                                            <Style TargetType="{x:Type GroupItem}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                                            <StackPanel>
                                                                <Border Background="{DynamicResource MaterialDesignCardBackground}"
                                                                      BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                                      BorderThickness="0,0,0,1"
                                                                      Padding="8,6"
                                                                      Margin="0,4,0,2">
                                                                    <ContentPresenter/>
                                                                </Border>
                                                                <ItemsPresenter Margin="0,0,0,8"/>
                                                            </StackPanel>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </GroupStyle.ContainerStyle>
                                    </GroupStyle>
                                </DataGrid.GroupStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="IP地址" Binding="{Binding IpAddress}" Width="120"/>
                                    <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="成功">
                                                        <Setter Property="Foreground" Value="Green"/>
                                                    </Trigger>
                                                    <Trigger Property="Text" Value="失败">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                    </Trigger>
                                                    <Trigger Property="Text" Value="超时">
                                                        <Setter Property="Foreground" Value="Orange"/>
                                                    </Trigger>
                                                    <Trigger Property="Text" Value="错误">
                                                        <Setter Property="Foreground" Value="DarkRed"/>
                                                    </Trigger>
                                                    <Trigger Property="Text" Value="已取消">
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="响应时间(ms)" Binding="{Binding ResponseTime}" Width="100"/>
                                    <DataGridTextColumn Header="测试时间" Binding="{Binding TestTime}" Width="140"/>
                                    <DataGridTextColumn Header="备注" Binding="{Binding Notes}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </materialDesign:Card>

                    <!-- 统计信息卡片 -->
                    <materialDesign:Card Grid.Row="2" Style="{StaticResource NetworkToolkitCard}" Margin="12,8,12,0">
                        <StackPanel>
                            <TextBlock Text="统计信息" Style="{StaticResource SubHeaderTextStyle}" Margin="0,0,0,12"/>
                            <UniformGrid Columns="3" Rows="1">
                                <Border Background="{DynamicResource MaterialDesignSelection}" 
                                      CornerRadius="8" Padding="16,12" Margin="0,0,8,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CheckCircle" Foreground="Green" 
                                                               Height="24" Width="24" VerticalAlignment="Center"/>
                                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock x:Name="SuccessCountText" Text="0" FontSize="20" 
                                                     FontWeight="Bold" HorizontalAlignment="Center"/>
                                            <TextBlock Text="成功" FontSize="12" 
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}" 
                                                     HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="{DynamicResource MaterialDesignSelection}" 
                                      CornerRadius="8" Padding="16,12" Margin="4,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CloseCircle" Foreground="Red" 
                                                               Height="24" Width="24" VerticalAlignment="Center"/>
                                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock x:Name="FailCountText" Text="0" FontSize="20" 
                                                     FontWeight="Bold" HorizontalAlignment="Center"/>
                                            <TextBlock Text="失败" FontSize="12" 
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}" 
                                                     HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="{DynamicResource MaterialDesignSelection}" 
                                      CornerRadius="8" Padding="16,12" Margin="8,0,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ClockOutline" Foreground="Orange" 
                                                               Height="24" Width="24" VerticalAlignment="Center"/>
                                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock x:Name="TimeoutCountText" Text="0" FontSize="20" 
                                                     FontWeight="Bold" HorizontalAlignment="Center"/>
                                            <TextBlock Text="超时" FontSize="12" 
                                                     Foreground="{DynamicResource MaterialDesignBodyLight}" 
                                                     HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- 现代化状态栏 -->
        <materialDesign:ColorZone Grid.Row="2" Padding="16,8" Mode="Light" 
                                  VerticalAlignment="Bottom"
                                  materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Circle" Height="8" Width="8" 
                                           VerticalAlignment="Center" Margin="0,0,8,0"
                                           Foreground="Green"/>
                    <TextBlock x:Name="StatusText" Text="就绪" VerticalAlignment="Center" FontWeight="Medium"/>
                </StackPanel>
                
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <TextBlock Text="NetToolkit" VerticalAlignment="Center" FontWeight="Medium" Margin="0,0,4,0"/>
                    <TextBlock Text="v1.0.0" VerticalAlignment="Center" 
                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>